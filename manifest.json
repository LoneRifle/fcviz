{
  "manifest_version": 2,

  "name": "FCViz",
  "description": "Provides extra visualisations for Funding Circle pages",
  "version": "1.3",
  "icons": {"48": "png/favicon48.png"},
  
  "content_scripts": [
    {
      "matches": ["https://www.fundingcircle.com/loans/*/auction"],
      "css": [ "css/fcviz.css" ],
      "js": [ "js/loanauctioninjector.js" ]
    },
    {
      "matches": ["https://www.fundingcircle.com/lend/loan-requests/*", "https://www.fundingcircle.com/my-account/my-watchlist/*"],
      "css": [ "css/fcviz.css" ],
      "js": [ "js/requestsinjector.js" ]
    },    
    {
      "matches": ["https://www.fundingcircle.com/my-account/my-lending/*"],
      "css": [ "css/fcviz.css" ],
      "js": [ "js/summaryinjector.js" ]
    }
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "web_accessible_resources": [
    "css/fcviz.css",
    "css/c3.min.css",
    "js/d3.min.js",
    "js/c3.min.js",
    "js/loanauction.js",
    "js/requests.js",
    "js/summary.js"    
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://www.fundingcircle.com/lend/loan-requests/download/*"
  ]
}